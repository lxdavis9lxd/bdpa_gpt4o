<nav class="navbar">
  <div class="navbar-left">
    <img src="/images/bdpa-logo.png" alt="BDPA Logo" class="navbar-logo">
    <span class="navbar-title">BDPADrive</span>
  </div>
  <div class="navbar-center">
    <% if (user) { %>
      <form action="/explorer" method="get" class="navbar-search">
        <input type="text" name="q" placeholder="Search files, folders, tags..." value="<%= typeof q !== 'undefined' ? q : '' %>">
        <button type="submit">Search</button>
      </form>
    <% } %>
  </div>
  <div class="navbar-right">
    <% if (user) { %>
      <span class="navbar-user">Hello, <a href="/dashboard"><%= user.username %></a></span>
      <a href="/explorer">Explorer</a>
      <a href="/editor">Editor</a>
      <a href="/dashboard">Dashboard</a>
      <a href="/logout">Logout</a>
    <% } else { %>
      <a href="/login">Login</a>
      <a href="/register">Sign Up</a>
    <% } %>
  </div>
</nav>
